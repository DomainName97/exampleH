<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.hakatonapplication.ui.home.HomeFragment"
        android:label="Карта"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.hakatonapplication.ui.gallery.GalleryFragment"
        android:label="Задания"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.hakatonapplication.ui.slideshow.SlideshowFragment"
        android:label="Выписанные штрафы"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_notification"
        android:name="com.example.hakatonapplication.NotifFragment"
        android:label="Уведомления"
        tools:layout="@layout/fragment_notif" />

    <fragment
        android:id="@+id/nav_exam"
        android:name="com.example.hakatonapplication.ExamFragment"
        android:label="Обучение"
        tools:layout="@layout/fragment_exam" />

    <fragment
        android:id="@+id/nav_info"
        android:name="com.example.hakatonapplication.InfoFragment"
        android:label="Информация"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/nav_contacts"
        android:name="com.example.hakatonapplication.ContactFragment"
        android:label="Контакты"
        tools:layout="@layout/fragment_contacts" />
</navigation>